type Query {
  getRecipes: [Recipe]
}

type Mutation {
    addRecipe(name: String!, category: String!, ingredients: String!, instructions: String!): Recipe
    updateRecipe(id: String!, name: String!, category: String!, ingredients: String!, instructions: String!): Recipe
    deleteRecipe(id: String!): String
}

type Recipe {
    id: String
    name: String
    category: String
    ingredients: [String]
    instructions: [String]
}